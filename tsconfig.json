{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types", // 默认值
      "types"
   ],
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "types": ["./types/*"]
    }
  },
  "include": ["src","mock/**/*.ts", "types"],
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
